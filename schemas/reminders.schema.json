{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Daily Reminder Configuration",
  "type": "object",
  "properties": {
    "countdowns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "イベント名"
          },
          "targetDate": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "目標日 (YYYY-MM-DD)"
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "targetDate"],
        "additionalProperties": false
      }
    },
    "yearlyTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "イベント名"
          },
          "month": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          "day": {
            "type": "integer",
            "minimum": 1,
            "maximum": 31
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "month", "day"],
        "additionalProperties": false
      }
    },
    "monthlyTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "タスク名"
          },
          "day": {
            "type": "integer",
            "minimum": 1,
            "maximum": 31
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "day"],
        "additionalProperties": false
      }
    },
    "weeklyTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "タスク名"
          },
          "dayOfWeek": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0,
              "maximum": 6,
              "description": "0=日曜日, 1=月曜日, ..., 6=土曜日"
            },
            "minItems": 1
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "dayOfWeek"],
        "additionalProperties": false
      }
    },
    "specificWeekTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "タスク名"
          },
          "week": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "第n週 (1-5)"
          },
          "dayOfWeek": {
            "type": "integer",
            "minimum": 0,
            "maximum": 6,
            "description": "0=日曜日, 1=月曜日, ..., 6=土曜日"
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "week", "dayOfWeek"],
        "additionalProperties": false
      }
    },
    "lastWeekTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "タスク名"
          },
          "dayOfWeek": {
            "type": "integer",
            "minimum": 0,
            "maximum": 6,
            "description": "0=日曜日, 1=月曜日, ..., 6=土曜日"
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "message": {
            "type": "string",
            "description": "カスタムメッセージ（オプション）"
          }
        },
        "required": ["name", "dayOfWeek"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}